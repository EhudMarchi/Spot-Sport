<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/curved"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:elevation="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">
<RelativeLayout
    android:id="@+id/spot_name_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="1dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/spotsport_logo" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/logo"
            android:text="Name"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textStyle="bold"/>
</RelativeLayout>
        <RelativeLayout
            android:id="@+id/spot_type_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/spot_name_layout">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/icon"
                android:text="Type"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/spot_address_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:layout_below="@id/spot_type_layout">
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="14dp"
                android:background="@drawable/curved"
                android:backgroundTint="@color/yellow_soft"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/distance_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spot_address_layout"
            android:gravity="center_horizontal"
            android:layout_marginBottom="25dp">
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="13dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spot_address_layout"
            android:id="@+id/question"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Would you like to see this location on map?"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:elevation="2dp"
            android:textSize="13sp"
            android:background="@drawable/curved"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:id="@+id/go_to"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/continue_btn"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/curved"
                android:backgroundTint="@color/red"
                android:elevation="2dp"
                android:text="cancel"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_below="@id/question"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:lottie_url="REPLACE_JSON_URL"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitCenter"
                app:lottie_rawRes="@raw/area_map"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/yes_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/curved"
                android:backgroundTint="@color/green"
                android:elevation="2dp"
                android:gravity="center"
                android:text="yes"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/go_to"
            android:id="@+id/add_fav"
            android:visibility="visible"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Add to favorites"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:elevation="2dp"
            android:textSize="13sp"
            android:background="@drawable/curved"
            android:backgroundTint="@color/dark_blue"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/btn_star_big_on"
            android:drawableTint="@color/yellow"
            android:drawablePadding="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"/>

    </RelativeLayout>


</RelativeLayout>

