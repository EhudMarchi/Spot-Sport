<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="18dp"
        android:gravity="top">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/curved"
            android:backgroundTint="@color/white"
            android:layout_centerHorizontal="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:elevation="1dp">

            <TextView
                android:id="@+id/open_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:text="Filter"
                android:textColor="@color/dark_blue"
                android:textStyle="bold" />
            <ImageButton
                android:visibility="gone"
                android:id="@+id/basketball_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/basketball"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/combine_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/basketball_filter"
                android:background="@drawable/combine"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/dance_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/combine_filter"
                android:background="@drawable/dance"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/diving_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/dance_filter"
                android:background="@drawable/diving"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/general_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/diving_filter"
                android:background="@drawable/general"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/gym_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/general_filter"
                android:background="@drawable/gym"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/karate_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/gym_filter"
                android:background="@drawable/karate"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/outdoor_gym_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/karate_filter"
                android:background="@drawable/outdoor_gym"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/close_filter"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/outdoor_gym_filter"
                android:background="@android:drawable/ic_delete"
                android:backgroundTint="@color/dark_blue"
                android:scaleType="centerCrop"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/sea_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/basketball_filter"
                android:background="@drawable/sea"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/skate_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/basketball_filter"
                android:layout_toRightOf="@id/sea_filter"
                android:background="@drawable/skate"
                android:scaleType="centerCrop"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/soccer_filter"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_below="@id/basketball_filter"
                android:layout_toRightOf="@id/skate_filter"
                android:background="@drawable/soccer"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/stadium_big_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/basketball_filter"
                android:layout_toRightOf="@id/soccer_filter"
                android:background="@drawable/stadium_big"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/staduim_medium_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/basketball_filter"
                android:layout_toRightOf="@id/stadium_big_filter"
                android:background="@drawable/staduim_medium"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/stadium_small_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/basketball_filter"
                android:layout_toRightOf="@id/staduim_medium_filter"
                android:background="@drawable/stadium_small"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/swim_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/basketball_filter"
                android:layout_toRightOf="@id/stadium_small_filter"
                android:background="@drawable/swim"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/tennis_filter"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_below="@id/basketball_filter"
                android:layout_toRightOf="@id/swim_filter"
                android:background="@drawable/tennis"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/volleyball_filter"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_below="@id/basketball_filter"
                android:layout_toRightOf="@id/tennis_filter"
                android:background="@drawable/volleyball"
                android:scaleType="centerCrop"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        android:padding="20dp"
        android:gravity="bottom">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:background="@drawable/curved"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:elevation="1dp">
            <TextView
                android:layout_above="@id/radius"
                android:id="@+id/radius_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radius: "
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"/>

            <SeekBar
                android:id="@+id/radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:max="10000"
                android:progress="0"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/dark_blue"
                android:thumbTint="@color/dark_blue" />
        </RelativeLayout>
    </RelativeLayout>
</fragment>
